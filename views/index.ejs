<!-- === Header Fade In === -->
<script>
  window.addEventListener('load', () => {
    setTimeout(() => {
      const header = document.querySelector('header');
      if (header) {
        header.classList.add('visible');
      }
    }, 1800);
  });
</script>

<script src="https://unpkg.com/scrollreveal"></script>
<script>
  document.addEventListener('DOMContentLoaded', () => {
    const sr = ScrollReveal();

    sr.reveal('.footer-content, .footer-contact', {
      origin: 'bottom',
      distance: '40px',
      duration: 800,
      easing: 'ease-out',
      opacity: 0,
      reset: false,
      once: true
    });

    // Optional: animate social icons one-by-one
    sr.reveal('.footer-socials a', {
      interval: 120,
      origin: 'bottom',
      distance: '20px',
      duration: 600,
      opacity: 0,
      once: true
    });
  });
</script>


