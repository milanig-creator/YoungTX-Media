<%- include('partials/header') %>

<!-- === HERO SECTION === -->
<section class="hero">
  <video autoplay muted loop playsinline class="hero-video">
    <source src="/videos/hero.mp4" type="video/mp4" />
    Your browser does not support the video tag.
  </video>

  <div class="hero-content">
    <div class="hero-inner">
      <img src="/images/Main Logo.png" alt="YTX Media Logo" />
      <h2>Built to Break the Algorithm</h2>
      <p class="tagline">Helping brands and creators grow through bold, impactful content.</p>
      <a href="/contact" class="cta-btn">Request a Consultation</a>

      <div class="hero-socials">
        <a href="https://instagram.com/ytxmedia" target="_blank" class="social-icon instagram" title="Follow us on Instagram">
          <i class="fab fa-instagram"></i>
        </a>
        <a href="https://tiktok.com/@ytxmedia" target="_blank" class="social-icon tiktok" title="Watch us on TikTok">
          <i class="fab fa-tiktok"></i>
        </a>
        <a href="https://youtube.com/@ytxmedia" target="_blank" class="social-icon youtube" title="Subscribe on YouTube">
          <i class="fab fa-youtube"></i>
        </a>
        <a href="https://facebook.com/ytxmedia" target="_blank" class="social-icon facebook" title="Connect on Facebook">
          <i class="fab fa-facebook-f"></i>
        </a>
      </div>
    </div>
  </div>
</section>

<!-- === ABOUT US SECTION === -->
<section class="about-section">
  <h2 class="section-title">About Us</h2>
  <div class="about-split">
    <div class="about-person">
      <img src="/images/person1.jpg" alt="Partner 1" />
      <h3>Partner 1</h3>
      <p>Short bio for the first business partner.</p>
    </div>

    <div class="fancy-divider"></div>

    <div class="about-person">
      <img src="/images/person2.jpg" alt="Partner 2" />
      <h3>Partner 2</h3>
      <p>Short bio for the second business partner.</p>
    </div>
  </div>
</section>

<!-- === PACKAGES SECTION === -->
<section class="packages-section">
  <h2>Our Packages</h2>
  <div class="packages-container">
    <div class="package-box">
      <h3>Package 1</h3>
      <p>Details coming soon.</p>
      <button>Learn More</button>
    </div>
    <div class="package-box">
      <h3>Package 2</h3>
      <p>Details coming soon.</p>
      <button>Learn More</button>
    </div>
    <div class="package-box">
      <h3>Package 3</h3>
      <p>Details coming soon.</p>
      <button>Learn More</button>
    </div>
  </div>
</section>

<!-- === TESTIMONIALS SECTION === -->
<section class="testimonials-section">
  <h2>Testimonials</h2>
  <p>Coming soon.</p>
</section>

<!-- === FOOTER SECTION === -->
<footer class="site-footer">
  <div class="footer-content">
    <div class="footer-logos">
      <img src="/images/main-logo-v2.png" alt="Main Logo" class="footer-logo" />
      <img src="/images/media-tagline.png" alt="Tagline" class="footer-logo" />
      <img src="/images/logo-variation-2.png" alt="Variation Logo" class="footer-logo" />
    </div>

    <div class="footer-contact">
      <h3>Contact Us</h3>
      <div class="footer-socials">
        <a href="https://instagram.com/ytxmedia" target="_blank" class="social-icon instagram" title="Follow us on Instagram">
          <i class="fab fa-instagram"></i>
        </a>
        <a href="https://tiktok.com/@ytxmedia" target="_blank" class="social-icon tiktok" title="Watch us on TikTok">
          <i class="fab fa-tiktok"></i>
        </a>
        <a href="https://youtube.com/@ytxmedia" target="_blank" class="social-icon youtube" title="Subscribe on YouTube">
          <i class="fab fa-youtube"></i>
        </a>
        <a href="https://facebook.com/ytxmedia" target="_blank" class="social-icon facebook" title="Connect on Facebook">
          <i class="fab fa-facebook-f"></i>
        </a>
      </div>
    </div>
  </div>

  <div class="footer-copy">
    &copy; <%= new Date().getFullYear() %> YTX Media. All rights reserved.
  </div>
</footer>

<!-- === Header Fade In === -->
<script>
  window.addEventListener('load', () => {
    setTimeout(() => {
      const header = document.querySelector('header');
      if (header) {
        header.classList.add('visible');
      }
    }, 1800);
  });
</script>

<!-- === ScrollReveal Animation === -->
<script src="https://unpkg.com/scrollreveal"></script>
<script>
  ScrollReveal().reveal('.about-person', {
    origin: 'bottom',
    distance: '40px',
    duration: 800,
    interval: 200,
    easing: 'ease-out',
    mobile: true,
    reset: false,
    once: true
  });

  ScrollReveal().reveal('.fancy-divider', {
    scale: 0.85,
    duration: 600,
    delay: 400,
    easing: 'ease-in-out',
    origin: 'left',
    distance: '20px'
  });

  ScrollReveal().reveal('.footer-content', {
    origin: 'bottom',
    distance: '50px',
    duration: 1000,
    easing: 'ease-in-out',
    reset: false,
    opacity: 0
  });

  ScrollReveal().reveal('.footer-logo', {
    origin: 'bottom',
    distance: '30px',
    duration: 800,
    interval: 150,
    easing: 'ease-out',
    reset: false
  });

  ScrollReveal().reveal('.footer-contact', {
    origin: 'bottom',
    distance: '30px',
    duration: 1000,
    delay: 200,
    easing: 'ease-in-out',
    reset: false
  });
</script>
