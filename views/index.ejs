<!-- === Header Fade In === -->
<script>
  window.addEventListener('load', () => {
    setTimeout(() => {
      const header = document.querySelector('header');
      if (header) {
        header.classList.add('visible');
      }
    }, 1800);
  });
</script>

<!-- === ScrollReveal Animations === -->
<script src="https://unpkg.com/scrollreveal"></script>
<script>
  ScrollReveal().reveal('.about-person', {
    origin: 'bottom',
    distance: '40px',
    duration: 800,
    interval: 200,
    easing: 'ease-out',
    mobile: true,
    reset: false,
    once: true
  });

  ScrollReveal().reveal('.fancy-divider', {
    scale: 0.85,
    duration: 600,
    delay: 400,
    easing: 'ease-in-out',
    origin: 'left',
    distance: '20px'
  });

  ScrollReveal().reveal('.footer-content', {
    origin: 'bottom',
    distance: '50px',
    duration: 1000,
    easing: 'ease-in-out',
    reset: false,
    opacity: 0
  });

  ScrollReveal().reveal('.footer-logo', {
    origin: 'bottom',
    distance: '30px',
    duration: 800,
    interval: 150,
    easing: 'ease-out',
    reset: false
  });

  ScrollReveal().reveal('.footer-contact', {
    origin: 'bottom',
    distance: '30px',
    duration: 1000,
    delay: 200,
    easing: 'ease-in-out',
    reset: false
  });
</script>

